<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pembagian">

    <EditText
        android:id="@+id/angka1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:hint="Angka 1"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="90dp"
        />
    <EditText
        android:id="@+id/angka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:hint="Angka 2"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_below="@+id/angka1"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/btn_hasil4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="/"
        android:textSize="20dp"
        android:layout_below="@+id/angka2"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/tv_hasil4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:layout_below="@+id/btn_hasil4"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/holo_green_dark"
        />
</RelativeLayout>